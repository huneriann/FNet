<Page x:Class="FNet.FSA.WPF.DetailsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FNet.FSA.WPF"
      xmlns:converters="clr-namespace:FNet.FSA.WPF.Converters"
      xmlns:model="clr-namespace:FNet.FSA.Core.Model;assembly=FNet.FSA.Core"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailsPage">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="5">
            <StackPanel Orientation="Horizontal" Margin="3">
                <Button Content="Expand all" Margin="5 0" Padding="5 0" Click="expandBtn_Click"/>
                <Button Content="Collapse all" Margin="5 0" Padding="5 0" Click="collapseBtn_Click"/>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Visible">
                <TreeView x:Name="mainTreeView" 
                      Background="Transparent" 
                      BorderThickness="0" 
                      Margin="3"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Page>
